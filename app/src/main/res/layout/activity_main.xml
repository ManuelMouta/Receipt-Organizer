<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/splash_screen"
    tools:context="com.example.manuel.receiptorganizer.MainActivity">

    <Button
        android:id="@+id/new_receipt"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="340dp"
        android:text="Adicionar Recibo"
        android:background="@drawable/btn_selector"/>

    <Button
        android:id="@+id/list_receipts_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/new_receipt"
        android:text="Lista de Recibos"
        android:background="@drawable/btn_selector"/>

    <Button
        android:id="@+id/overview_receipts_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/list_receipts_btn"
        android:text="Resumo"
        android:background="@drawable/btn_selector"/>

</RelativeLayout>
