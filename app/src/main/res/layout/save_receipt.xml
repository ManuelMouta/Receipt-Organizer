                android:textColor="@color/white"
                android:textSize="24dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">

        <RelativeLayout
            android:id="@+id/type5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/category5"
            android:layout_marginRight="2dp">

            <ImageView
                android:id="@+id/stufficon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/stuff"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/btn5_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stufficon"
                android:text="Stuff"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/type6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/category6">

            <ImageView
                android:id="@+id/othericon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/file"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/btn6_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/othericon"
                android:text="Other"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

    </LinearLayout>

