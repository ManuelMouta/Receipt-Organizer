<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/receipt_categories_header"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">

        <RelativeLayout
            android:id="@+id/type1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/category1"
            android:layout_marginRight="2dp">

            <ImageView
                android:id="@+id/foodicon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/food"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/btn1_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foodicon"
                android:text="Food"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/type2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/category2">

            <ImageView
                android:id="@+id/houseicon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/house"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/btn2_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/houseicon"
                android:text="House"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

    </RelativeLayout>

    </LinearLayout>

    <LinearLayout
