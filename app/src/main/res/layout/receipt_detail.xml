<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        layout="@layout/receipt_list_header"
        ></include>

    <TextView
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:text="Detalhe Recibo"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"/>

    <EditText
        android:id="@+id/receipt_name_value"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:hint="Nome"
        android:textSize="20dp"
        android:inputType="text"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/textinput_selector"
        />
    <EditText
        android:id="@+id/receipt_total"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:hint="Valor Total"
        android:textSize="20dp"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/textinput_selector"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Notas"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/receipt_info"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine|text"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:lines="8"
        android:gravity="top|left"
        android:layout_gravity="center_horizontal"
        android:scrollbars="vertical"
        android:background="@drawable/textinput_selector"
        />

    <Button
        android:id="@+id/save_receipt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Gravar"
        android:background="@drawable/btn_selector"/>

</LinearLayout>